<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="true"
  processIsolation="false"
  stopOnFailure="false"
  syntaxCheck="false"
  >
  <php>
    <ini name="memory_limit" value="-1"/>
  </php>

  <filter>
    <whitelist>
      <directory>src</directory>
    </whitelist>
  </filter>

  <testsuites>
    <testsuite name="Test Suite">
      <directory>./test/</directory>
    </testsuite>
  </testsuites>
</phpunit>
